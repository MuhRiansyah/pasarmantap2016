                    ul#menu-penjualan.collapse
                        li: a.c-menu__link(href='flot.html') Pesanan Baru
                        li: a.c-menu__link(href='flot.html') Konfirmasi Pengiriman
                        li: a.c-menu__link(href='flot.html') Status Pengiriman
                        li: a.c-menu__link(href='flot.html') Daftar Transaksi
                li.c-menu__item
                    a.c-menu__link(href='/keluar') Keluar
        else
            ul.c-menu__items
                li.c-menu__item
                    .well
                        p: img(src='/images/banner.png')
                li.c-menu__item
                    a.c-menu__link(href='/') Beranda
                li.c-menu__item
                    a.c-menu__link(href='#masuk', data-toggle='collapse') Masuk
                li#masuk.collapse
                    form(method='post',style='padding : 20px',action='/cekloginmobile')
                        p: input(name='email', type='text', placeholder='Email')
                        p: input(name='sandi',type='password', placeholder='Sandi')
                        p: input.btn.btn-primary(type='submit' value='Masuk')
                li.c-menu__item
                    a.c-menu__link(href='#') Daftar
    #c-mask.c-mask
script(src='/javascripts/push-left-menu.js')
script.
    var pushLeft = new Menu({
        wrapper: '#o-wrapper',
        type: 'push-left',
        menuOpenerClass: '.c-button',
        maskId: '#c-mask'
    });
    var pushLeftBtn = document.querySelector('#c-button--push-left');
    pushLeftBtn.addEventListener('click', function (e) {
        e.preventDefault;
        pushLeft.open();
    });

