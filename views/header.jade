
append header
    header#header
        // header
        .headerPasar
            // header_top
            .container
                .row
                    .col-sm-1
                    .col-sm-1(style='padding-left : 20px')
                        .logo
                            //nanti diganti session.nama dengan mengecek status login, ke halaman app.js bagian pengeseatan session
                            if (session.loggedIn)
                                a(href='/pc-view/beranda'): img(src='/images/logoPasarMantap.png', width='120px')
                            else
                                a(href='/'): img(src='/images/logoPasarMantap.png', width='120px')
                    .col-sm-9(style='margin-left : 70px;margin-top : 15px')
                        //a(href='/keranjang/bersihkantransaksi') bersihkan transaksi
                        .mainmenu
                            ul.nav.navbar-nav
                                li.dropdown
                                    a(href='#')
                                        | Kategori
                                        i.fa.fa-angle-down
                                    ul.sub-menu(role='menu',style='width:250px')
                                            li: a(href='/produk/daftarbykategori/1') Pakaian
                                            li: a(href='/produk/daftarbykategori/2') Buku
                                            li: a(href='/produk/daftarbykategori/3') Mainan & Hobi
                                            li: a(href='/produk/daftarbykategori/5') Software
                                            li: a(href='/produk/daftarbykategori/6') Film
                                            li: a(href='/produk/daftarbykategori/7') Musik
                                            li: a(href='/produk/daftarbykategori/8') Otomotif
                                            li: a(href='/produk/daftarbykategori/9') Elektronik
                                            li: a(href='/produk/daftarbykategori/10') Kamera
                                            li: a(href='/produk/daftarbykategori/11') Laptop & Notebook
                                            li: a(href='/produk/daftarbykategori/12') Tablet & Smartphone
                                            li: a(href='/produk/daftarbykategori/13') Sepatu
                                li
                                    form(action='/cekPencarian', method='get')
                                        div.input-group.custom-search-form(style='width:450px')
                                            input.form-control(type='text', placeholder='Cari Produk')
                                            span.input-group-btn
                                                select.form-control(name='pilihan' style='width:200px')
                                                    option  Semua Kategori
                                                    option(value='1')  Pakaian
                                                    option(value='2') Buku
                                                    option(value='3') Mainan & Hobi
                                                    option(value='5') Software
                                                    option(value='6') Film
                                                    option(value='7') Musik
                                                    option(value='8') Otomotif
                                                    option(value='9') Elektronik
                                                    option(value='10') Kamera
                                                    option(value='11') Laptop & Notebook
                                                    option(value='12') Tablet & Smartphone
                                                    option(value='13') Sepatu
                                            input.btn.btn-default(type='submit', value='cari')

                                if (session.loggedIn)
                                    li: a(href='/pengguna/profil/'+session.penggunaId)=session.nama
                                    li.dropdown
                                        a.dropdown-toggle(href='#', data-toggle='dropdown')
                                            i.fa.fa-bell
                                            i.fa.fa-caret-down
                                        style.
                                            .dropdown-menu li{ border-bottom: solid lightgray 0.5px}
                                        ul.dropdown-menu
                                            li(style="padding-left :15px"): b Pembelian
                                            li: a(href='/pembelian/statuspemesanan')
                                                div(style='padding : 4px 0') Status Pemesanan &nbsp;
                                                        //todo: rencana kedepan , tambahkan notif jika ada pembelian baru
                                                        //span.small(style='background-color : black;color:white;padding : 2px'): b  2
                                            li: a(href='/pembelian/konfirmasipenerimaan')
                                                div(style='padding: 5px 0px') Konfirmasi Penerimaan &nbsp;
                                                    //span.small(style='background-color : black;color:white;padding : 2px'): b  2
                                            li: a(href='/pembelian/konfirmasipembayaran')
                                                    div(style='padding: 5px 0px') Konfirmasi Pembayaran &nbsp;
                                                        //span.small(style='background-color : black;color:white;padding : 2px'): b  2
                                            li: b Penjualan
                                            li: a(href='/penjualan/statuspengiriman')
                                                div(style='padding : 4px 0') Status Pengiriman &nbsp;
                                                        //span.small(style='background-color : black;color:white;padding : 2px'): b  2
                                            li: a(href='/penjualan/konfirmasipengiriman')
                                                div(style='padding: 5px 0px') Konfirmasi Pengiriman &nbsp;
                                                    //span.small(style='background-color : black;color:white;padding : 2px'): b  2
                                            li: a(href='/penjualan/pesananbaru')
                                                    div(style='padding: 5px 0px') Pesanan Baru &nbsp;
                                                        //span.small(style='background-color : black;color:white;padding : 2px'): b  2
                                    li: a(href='/keranjang/')
                                            i.fa.fa-shopping-cart &nbsp;
                                            span(style='background-color : red;color:white;padding : 2px;margin: 10px 0 0 0'): b=(session.cart).length
                                    li: a(href='/keluar'): i.fa.fa-power-off
                                else
                                    li
                                        a(href='#')
                                            i.fa.fa-user
                                            |  Daftar
                                    li
                                        a.dropdown(href='#', data-toggle='dropdown')
                                            i.fa.fa-sign-in
                                            |  Masuk
                                        div.dropdown-menu
                                            form(method='post',style='padding : 20px',action='/ceklogin')
                                                p: input(name='email', type='text', placeholder='Email')
                                                p: input(name='sandi',type='password', placeholder='Sandi')
                                                p: input.btn.btn-primary(type='submit' value='Masuk')


